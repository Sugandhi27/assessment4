</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeatherID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HighTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LowTemp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForCast)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighTemp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LowTemp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForCast)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.City}) |
